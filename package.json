{
  "name": "bluespark",
  "version": "0.0.0",
  "repository": "github:yarnaimo/bluespark",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "debug": "node --inspect -r ts-node/register",
    "dev": "yarn ts-node src/index.ts",
    "prepare": "yarn build",
    "serve": "firebase serve --only firestore",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "NODE_ENV=test jest",
    "ts-node": "ts-node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,vue,gql,md}": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ],
    "./package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "prettier": "@yarnaimo/prettier-config",
  "dependencies": {
    "@yarnaimo/rain": "^0.2.8",
    "dayjs": "^1.8.13"
  },
  "devDependencies": {
    "@yarnaimo/firebase-testing": "latest",
    "@yarnaimo/tss": "^0.1.2"
  },
  "peerDependencies": {
    "firebase": "^5.10.1"
  }
}
